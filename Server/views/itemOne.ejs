<!DOCTYPE html>
<html>
     <head>
     <meta charset="utf-8">
            <% include ./head.html %>
            <link rel="stylesheet" href="../styles/itemStyle.css">
            <link href="https://fonts.googleapis.com/css?family=Khand" rel="stylesheet">
            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                  google.charts.load('current', {'packages':['corechart']});
                  google.charts.setOnLoadCallback(drawChart);

                  function drawChart() {

                    var data = google.visualization.arrayToDataTable([
                      ['Task', 'Hours per Day'],
                      ['Janna',     11],
                      ['Azir',      2],
                      ['Fiora',  2],
                      ['Nami',    7]
                    ]);

                    var options = {
                        height: 250,
                        legend: { textStyle: {color: '#ffffff', fontSize: 14}}
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));

                    chart.draw(data, options);
                  }
            </script>
            <script type="text/javascript">
                  google.charts.load('current', {'packages':['corechart']});
                  google.charts.setOnLoadCallback(drawChart);

                  function drawChart() {

                    var data = google.visualization.arrayToDataTable([
                      ['Task', 'Hours per Day'],
                      ['Janna',     11],
                      ['Azir',      2],
                      ['Fiora',  2],
                      ['Nami',    7]
                    ]);

                    var options = {
                        height: 250,

                        legend: { textStyle: {color: '#ffffff', fontSize: 14}}
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart2'));

                    chart.draw(data, options);
                  }
            </script>
            <title>Item</title>
     </head>
     <body>
    	 <header>
            <% include ./header %>
    	 </header>
         <div class="item-content">
            <div class="item-next">
                <a href="/items"><p>view another<p></a>
                <span>item</span>
            </div>
            <div class="background3"></div>
            <div class="background4"></div>
             <div class="item-header">
              <%
              var urlG;
                for(j = 0; j < itemsImages.length; j++){
                    if(itemsImages[j].id === mainItem.imageId){
                        urlG = itemsImages[j].url;
                        break;
                    }
                  }
              %>
                <div class="item-img">
                    <img src="../images/itemOne-header.jpg"/>
                </div>
                <div class="item-name">
                    <span><%= mainItem.name %></span>
                    <div class="logo-item-container">
                        <img src="<%= urlG%>" />
                    </div>
                </div>
                <div class="item-header-stats">
                    <div class="champ-stats">

                        <%
                          var k;
                          var l;
                          var m;
                          for(k=0; k<winItems.length; k++){
                              if(mainItem.id === winItems[k].key){
                                l = winItems[k].value
                              }
                          }
                          for(k=0; k<pickItems.length; k++){
                              if(mainItem.id === pickItems[k].key){
                                m = pickItems[k].value
                              }
                          }
                        %>

                        <span class="value-stat"><%= l%>%</span>
                        <span class="title-stat">win rate</span>
                    </div>
                    <div class="divider"></div>
                    <div class="champ-stats">
                        <span class="value-stat"><%= m%>%</span>
                        <span class="title-stat">popularity</span>
                    </div>
                </div>
                <div class="background"></div>
                <div class="background2"></div>
             </div>
             <div class="item-history-wrap clean">
                <div class="item-description">
                    Statistics
                </div>
                <div class="content-info-ch">
                     <div class="win-stat-ch">
                        <div class="header-graph1">Most PickEd by champion</div>
                        <div id="piechart"></div>
                     </div>
                     <div class="win-stat-ch">
                        <div class="header-graph2">Heighst PickRate as Support</div>
                        <div id="piechart2"></div>
                     </div>
                </div>
            </div>
             <div class="item-history-wrap" id="item-history-d">
                <div class="item-description-v">
                    <span>description</span>
                </div>
                <div class="item-text-v">
                    <div class="item-text-h">
                      <div class="background-item">
                      </div>
                      <div class="background-item-name">
                        <%= mainItem.name %>
                      </div>
                    </div>
                    <div class="item-text-pr">
                      <span class="property">+ <%= mainItem.ad %> Attack Damage</span>
                      <span class="property">+ <%= mainItem.ap %> Ability Power</span>
                      <span class="property">+ <%= mainItem.cdr %>% Coldown Reduction</span>
                      <span class="passive"><span>UNIQUE Passive: </span>
                        <%= mainItem.description %>.
                      </span>
                    </div>
                </div>
             </div>
         </div>

         <footer>
            <div class="footer">
                <% include ./footer %>
            </div>
        </footer>
     </body>
 </html>
